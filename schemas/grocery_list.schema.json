{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "GroceryList",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "week_start",
    "items"
  ],
  "properties": {
    "week_start": {
      "type": "string",
      "format": "date"
    },
    "items": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "name_display",
          "name_normalized",
          "total_quantity",
          "unit",
          "category",
          "source_days"
        ],
        "properties": {
          "name_display": {
            "type": "string"
          },
          "name_normalized": {
            "type": "string"
          },
          "total_quantity": {
            "type": "number"
          },
          "unit": {
            "type": "string"
          },
          "category": {
            "type": "string"
          },
          "source_days": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "notes": {
            "type": "string"
          },
          "store_item_name": {
            "type": "string"
          },
          "store_product_id": {
            "type": "string"
          },
          "store_sku": {
            "type": "string"
          },
          "price_usd": {
            "type": "number",
            "minimum": 0
          },
          "match_confidence": {
            "type": "number",
            "minimum": 0,
            "maximum": 1
          },
          "match_type": {
            "type": "string",
            "enum": [
              "exact",
              "approximate",
              "no_match"
            ]
          }
        }
      }
    }
  }
}
