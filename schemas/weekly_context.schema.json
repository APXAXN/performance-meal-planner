{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "WeeklyContext",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "week_start",
    "timezone",
    "schedule",
    "training_focus"
  ],
  "properties": {
    "week_start": {
      "type": "string",
      "format": "date"
    },
    "timezone": {
      "type": "string"
    },
    "training_focus": {
      "type": "string"
    },
    "schedule": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "date",
          "day_type",
          "notes"
        ],
        "properties": {
          "date": {
            "type": "string",
            "format": "date"
          },
          "day_type": {
            "type": "string",
            "enum": [
              "rest",
              "training",
              "high"
            ]
          },
          "notes": {
            "type": "string"
          }
        }
      }
    }
  }
}